<%- include('./partials/header.ejs') %>


<ul>
    <li><a style="float:right" href="/logout">Logout</a></li>
</ul>



<div class="container" data-ng-app="myApp" data-ng-controller="myCtrl">
    <div class="row">
        <div class="">
            <a style="float:right; margin: 3rem;" href="/addstudent">
            <button class="btn btn-primary">Add Student</button></a>
        </div>
        
    </div>
    <br />
    <table>
        <tr>
            <th>Profile pic</th>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Date of Birth</th>
            <th>Mark</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% student.map((student) => { %>
        <tr data-ng-repeat="customer in people | filter: table">
            <td><img src="/images/<%= student.name %>.<%= student.extName %>" style="width: 5rem; height: 5rem;" alt=""></td>
            <td><%= student.name %></td>
            <td><%= student.age %></td>
            <td><%= student.department %></td>
            <td><%= student.dob %></td>
            <td><%= student.mark %></td>
            <td><a href="/edit/<%= student._id %>"><button>Edit</button></a></td>
            <td><a href="/delete/<%= student._id %>"><button>Delete</button></a></td>
        </tr>
        <% }) %>
    </table>
    <div data-pagination="" data-num-pages="numPages()" data-current-page="currentPage" data-max-size="maxSize"
        data-boundary-links="true"></div>
</div>


<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
        border-right: 1px solid #bbb;
    }

    li:last-child {
        border-right: none;
    }

    li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover:not(.active) {
        background-color: #111;
    }

    .active {
        background-color: #4CAF50;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
</style>